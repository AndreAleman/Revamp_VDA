{{ 'section-vda-banner.css' | asset_url | stylesheet_tag }}

<div class="vda-banner__ctn">
     
  
  {% comment %}
    <img class="vda-banner__swirl" src="{{ 'Header.svg' | asset_url }}"/>
  {% endcomment %}

    <div class="vda-banner__content">
        <h1>{{ section.settings.title }}</h1>
        <h2>{{ section.settings.text }}</h2>
    </div>  

    <div class="vda-banner__mascot"> <img src="{{ 'van-doge-logo.png' | asset_img_url }}"/> </div>  
    
</div>

 

{% schema %}
  {
    "name": "VDA Banner",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Van Doge Art"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>default</p>"
      }
    ],
    "presets": [{
        "name": "VDA Banner",
        "category": "Text"
    }]
  }
{% endschema %}